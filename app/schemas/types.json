{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {
    "bot": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" }
      },
      "additionalProperties": false,
      "required": [ "id", "name" ]
    },

    "facebookChannelConfig": {
      "type": "object",
      "properties": {
        "page_id": { "type": "string" },
        "verify_token": { "type": "string" },
        "access_token": { "type": "string" }
      },
      "additionalProperties": false,
      "required": [ "page_id", "verify_token", "access_token" ]
    },

    "frontDeskConfig": {
      "type": "object",
      "properties": {
        "greeting": { "$ref": "#/definitions/message" },
        "introduction": { "$ref": "#/definitions/message" },
        "not_understood": { "$ref": "#/definitions/message" },
        "clarification": { "$ref": "#/definitions/message" },
        "threshold": { "type": "number", "maximum": 1, "minimum": 0 }
      },
      "additionalProperties": false,
      "required": [ "greeting", "introduction", "not_understood", "clarification", "threshold" ]
    },

    "languageDetectorConfig": {
      "type": "object",
      "properties": {
        "explanation": { "$ref": "#/definitions/message" },
        "languages": { "type": "array" }
      },
      "additionalProperties": false,
      "required": [ "explanation", "languages" ]
    },

    "keywordResponderConfig": {
      "type": "object",
      "properties": {
        "explanation": { "$ref": "#/definitions/message" },
        "clarification": { "$ref": "#/definitions/message" },
        "keywords": { "type": "array" },
        "responses": { "type": "array" }
      },
      "additionalProperties": false,
      "required": [ "explanation", "clarification", "keywords", "responses" ]
    },

    "message": {
      "type": "string"
    },

    "channel" : {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "id": { "type": "integer" },
            "name": { "type": "string" },
            "kind": { "type": "string", "enum": ["facebook"] },
            "config": { "$ref": "#/definitions/facebookChannelConfig" }
          },
          "additionalProperties": false,
          "required": [ "id", "name", "kind", "config" ]
        }
      ]
    },

    "frontDesk": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "config": { "$ref": "#/definitions/frontDeskConfig" }
      },
      "required": [ "id", "config" ]
    },

    "skill": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "kind": { "enum": [
          "language_detector",
          "keyword_responder"
        ] },
        "name": { "type": "string" },
        "enabled": { "type": "boolean" },
        "config": { "oneOf": [
          { "$ref": "#/definitions/languageDetectorConfig" },
          { "$ref": "#/definitions/keywordResponderConfig" }
        ] }
      },
      "required": [ "id", "kind", "name", "enabled", "config" ]
    }
  },

  "type": "object",
  "properties": {
    "bot": { "$ref": "#/definitions/bot" }
  }
}
